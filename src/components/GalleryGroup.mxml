			{
				medAlertTimer.addEventListener(TimerEvent.TIMER, handleMedAlertTimer);
				medAlertTimer.start();
				// GuideBtnSequence.play();
				showOtherImages.play();
			}
			
			// private var nativeMedAlert : NativeAlert = new NativeAlert();
			
