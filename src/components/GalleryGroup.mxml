				// nativeMedAlert.showAlertWithTitleAndMessage("Medication Reminder", "It's time for Lois to take the morning dose of Zocor.", "Ok", "Dismiss");
				// nativeMedAlert.addEventListener(NativeAlertEvent.ALERT_CLOSE_EVENT, handleMedAlertEvent);
				openOverlay.play();
				iPadPrototype.testOverlay1_1.visible = true;
				medAlertTimer.reset();
			}
			
